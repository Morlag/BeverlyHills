<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowBackground">#eeeeee</item>
    </style>
    <style name="MasterTimeButton" parent="Theme.MaterialComponents.Light.NoActionBar.Bridge">
        <item name="android:background">@android:color/transparent</item>
        <item name="android:strokeColor">@android:color/white</item>
        <item name="strokeWidth">1dp</item>
        <item name="android:textColor">@android:color/black</item>
    </style>
    <style name="NailButton" parent="@style/Widget.MaterialComponents.Button.OutlinedButton" xmlns:app="http://schemas.android.com/apk/res-auto">

        <item name="android:background">@android:color/white</item>
        <item name="android:strokeColor">@color/colorBlack</item>
        <item name="strokeWidth">1dp</item>
        <item name="android:textColor">@android:color/black</item>
    </style>

</resources>